<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:paddingTop="10dp"
        android:text="Coffee Addicts Corner"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/orderImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ButtontextView"
        android:layout_alignRight="@+id/ButtontextView"
        android:layout_centerVertical="true"
        android:contentDescription="go to menu"
        android:onClick="onClickorderImageButton"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ButtontextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Order Now"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/CallUsimageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:elevation="1dp"
        android:onClick="onClickCallUsImageButton"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>